{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
	<main class="container-fluid">
		<article class="container">
			<h1 class="text-center mb-4 fw-semibold fs-2">Membre</h1>
			<table class="table table-sm">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ membre.id }}</td>
					</tr>
					<tr>
						<th>Civilite</th>
						<td>{{ membre.civilite }}</td>
					</tr>
					<tr>
						<th>Pseudo</th>
						<td>{{ membre.pseudo }}</td>
					</tr>
					<tr>
						<th>Statut</th>
						<td>{{ membre.statut == 1 ? 'Admin' : 'Membre' }}</td>
					</tr>
					<tr>
						<th>Roles</th>
						<td>{{ membre.roles ? membre.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ membre.nom }}</td>
					</tr>
					<tr>
						<th>Prenom</th>
						<td>{{ membre.prenom }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ membre.email }}</td>
					</tr>
					<tr>
						<th>Date Enregistrement</th>
						<td>{{ membre.dateEnregistrement ? membre.dateEnregistrement|date('Y-m-d H:i') : '' }}</td>
					</tr>
				</tbody>
			</table>
			<a href="{{ path('membre_index') }}" class="btn btn-outline-primary btn-sm float-end ms-3">Retour</a>
			<a href="{{ path('membre_edit', {'id': membre.id}) }}" class="btn btn-outline-primary btn-sm float-end mx-1">Modifier</a>
			{{ include('membre/_delete_form.html.twig') }}
		</article>
	</main>
{% endblock %}
