{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="container-fuid">
    <article class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">Tu es déjà connecté en tant que {{ app.user.userIdentifier }},<a href="{{ path('logout') }}">Se Déconnecter.</a>
                </div>
            {% endif %}

            <h1 class="text-center mb-4 fw-semibold fs-2">Connexion</h1>
            <label for="inputPseudo">Pseudo</label>
            <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control mb-3" autocomplete="username" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

            <input
            type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html
                    
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

            <button class="btn btn-sm btn-outline-success float-end ms-3 mb-3" type="submit">Connexion</button>
        </form>
        <br>
        <br>
        <a href="{{ path('register') }}" class="btn btn-sm btn-outline-primary float-end ms-3">Inscription</a>
    </article>
</main>
{% endblock %}
