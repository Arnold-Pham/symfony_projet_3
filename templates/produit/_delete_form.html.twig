<form method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
	<button class="btn btn-outline-danger btn-sm float-start me-3">Supprimer</button>
</form>
