{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
	<main class="container-fluid">
		<article class="container">
			<h1 class="text-center mb-4 fw-semibold fs-2">Produit</h1>
			<table class="table table-sm">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ produit.id }}</td>
					</tr>
					<tr>
						<th>Titre</th>
						<td>{{ produit.titre }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ produit.description }}</td>
					</tr>
					<tr>
						<th>Couleur</th>
						<td>{{ produit.couleur }}</td>
					</tr>
					<tr>
						<th>Taille</th>
						<td>{{ produit.taille }}</td>
					</tr>
					<tr>
						<th>Collection</th>
						<td>{{ produit.collection }}</td>
					</tr>
					<tr>
						<th>Photo</th>
						<td>/upload{{ asset(produit.photo) }}</td>
					</tr>
					<tr>
						<th>Prix</th>
						<td>{{ produit.prix|deviseFr }}</td>
					</tr>
					<tr>
						<th>Stock</th>
						<td>{{ produit.stock }}</td>
					</tr>
					<tr>
						<th>Date Enregistrement</th>
						<td>{{ produit.dateEnregistrement ? produit.dateEnregistrement|date('Y-m-d H:i') : '' }}</td>
					</tr>
				</tbody>
			</table>
			<a href="{{ path('produit_index') }}" class="btn btn-outline-primary btn-sm float-end ms-3">Retour</a>
			<a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-outline-primary btn-sm float-end mx-1">Modifier</a>
			{{ include('produit/_delete_form.html.twig') }}
		</article>
	</main>
{% endblock %}
