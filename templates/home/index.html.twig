{% extends 'base.html.twig' %}

{% block title %}MyShop{% endblock %}

{% block body %}
	<main class="container-fluid">
		<section class="container">
			<h1 class="text-center mb-4 fw-semibold fs-2">Nos Produits</h1>
			<div class="row justify-content-center">
				{% for article in articles %}
					<article class="card col-3 m-2 p-0" style="background: {{ article.couleur }}30">
						<img src="/upload{{ asset(article.photo)}}" alt="" class="card-image-top bg-light">
						<hr class="p-0 m-0">
						<div class="card-body p-3">
							<h2 class="card-title h3 text-center ">{{ article.titre }}</h2>
							<p class="card-subtitle text-muted">{{ article.description }}
								-
								{{ article.taille }}</p>
						</div>
						<div class="card-footer">
							<div class="d-flex justify-content-between">
								<p class="d-inline">{{ article.stock }}
									en stock</p>
								<p class="d-inline">{{ article.prix|deviseFr }}/unité</p>
							</div>
							{% if article.stock != 0 %}
								<a href="{{ path('commande_user_new', {'id': article.id}) }}" class="btn btn-primary btn-sm float-end ms-3">Commander</a>
							{% else %}
								<a class="btn btn-danger btn-sm float-end ms-3 disabled">Épuisé</a>
							{% endif %}
						</div>
					</article>
				{% else %}
					<article>Aucun article à afficher</article>
				{% endfor %}
			</div>
		</section>
	</main>
{% endblock %}
